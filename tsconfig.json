{
  "compilerOptions": {
    "paths": {
      "payload/generated-types": [
        "./src/payload-types.ts"
      ],
      "stripe": [
        "./node_modules/stripe"
      ]
    },
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    // "allowSyntheticDefaultImports": true,
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "jsx": "react",
  },
  "include": [
    "src",
    "src/payload.config.ts",
    "src/scripts/migrateVersions.ts",
  ],
  "exclude": [
    "node_modules",
    "dist",
    "build",
  ],
  "ts-node": {
    "transpileOnly": true
  }
}