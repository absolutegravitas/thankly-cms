{
  "compilerOptions": {
    "paths": {
      "stripe": [
        "./node_modules/stripe"
      ],
       "payload/generated-types": [
        "./src/payload-types.ts"
      ],
      "@collections/*": [
        "./src/collections/*"
      ],
      "@blocks/*": [
        "./src/blocks/*"
      ],
      "@components/*": [
        "./src/components/*"
      ],
    
      "@globals/*": [
        "./src/globals/*"
      ],
   
    
    },
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    // "allowSyntheticDefaultImports": true,
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "baseUrl": ".", 
    "outDir": "./dist",
    "rootDir": "./src",
    "jsx": "react",
    // "noEmit": true,
    // "allowImportingTsExtensions": true,
  },
  "include": [
    "src",
    "src/payload.config.ts",
    "src/scripts/migrateVersions.ts",
  ],
  "exclude": [
    "node_modules",
    "dist",
    "build",
  ],
  "ts-node": {
    "transpileOnly": true,
    "swc":true
  }
}